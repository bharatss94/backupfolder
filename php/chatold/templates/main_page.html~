<script language="javascript" type="text/javascript">
var timeout = setTimeout(reloadChat, 1000);

function reloadChat () {
$('#links').load('./index.php #links',function () {
        $(this).unwrap();
        timeout = setTimeout(reloadChat, 1000);
});
}
</script>
